<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
        <h6 class="m-0 font-weight-bold">Quản lý Danh mục</h6>
        <a href="/admin/categories/new" class="btn btn-success btn-green">
            <i class="bi bi-plus-lg me-1"></i>Thêm danh mục mới
        </a>
    </div>
    <div class="card-body">
        {{#if categories.length}}
        <div class="table-responsive">
            <table class="table table-bordered" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Tên danh mục</th>
                        <th>Slug</th>
                        <th>Thứ tự</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <td>
                            <img src="{{image}}" alt="{{name}}" style="width: 50px; height: 50px; object-fit: cover;"
                                 onerror="this.src='https://via.placeholder.com/50x50/0C8242/FFFFFF?text=No+Image'">
                        </td>
                        <td>
                            <strong>{{name}}</strong>
                        </td>
                        <td>
                            <code>{{slug}}</code>
                        </td>
                        <td>
                            <span class="badge bg-info">{{order}}</span>
                        </td>
                        <td>
                            {{#if isActive}}
                                <span class="badge bg-success">Hoạt động</span>
                            {{else}}
                                <span class="badge bg-secondary">Ngừng</span>
                            {{/if}}
                        </td>
                        <td class="table-actions">
                            <a href="/admin/categories/{{_id}}/edit" class="btn btn-sm btn-primary" title="Chỉnh sửa">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <form method="POST" action="/admin/categories/{{_id}}/delete" style="display: inline;"
                                  onsubmit="return confirm('Bạn có chắc muốn xóa danh mục này?')">
                                <button type="submit" class="btn btn-sm btn-danger" title="Xóa">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{else}}
        <div class="text-center py-5">
            <i class="bi bi-tags fa-4x text-gray-300 mb-3"></i>
            <h5 class="text-muted">Chưa có danh mục nào</h5>
            <p class="text-muted">Bắt đầu bằng cách thêm danh mục đầu tiên vào cửa hàng của bạn</p>
            <a href="/admin/categories/new" class="btn btn-success btn-green">
                <i class="bi bi-plus-lg me-1"></i>Thêm danh mục đầu tiên
            </a>
        </div>
        {{/if}}
    </div>
</div>